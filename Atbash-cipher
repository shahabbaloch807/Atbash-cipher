def atbash(text):
    result = ""
    for char in text:
        if char.isupper():
            result += chr(90 - (ord(char) - 65))
        elif char.islower():
            result += chr(122 - (ord(char) - 97))
        else:
            result += char
    return result

text = input("Enter text: ")
encrypted = atbash(text)
print("Encrypted:", encrypted)
print("Decrypted:", atbash(encrypted))

